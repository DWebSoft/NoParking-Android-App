<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Owner Name : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Ulka G."
                android:textSize="16sp"
                android:id="@+id/owner_name"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Registration Number : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="MH122381"
                android:textSize="16sp"
                android:id="@+id/registration_number"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Vehicle class : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="M-Cycle/Scooter"
                android:id="@+id/vehicle_class"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Model : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Honda Hornet"
                android:id="@+id/model"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Fuel Type : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="Petrol"
                android:id="@+id/fuel_type"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Engine Number : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="KC23E800XXXX"
                android:id="@+id/engine_number"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Mobile Number : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="+91XXXXXXXXXX"
                android:id="@+id/mobile_number"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Email ID : "
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="test@example.com"
                android:id="@+id/email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:text="Save"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:id="@+id/saveBtn"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>